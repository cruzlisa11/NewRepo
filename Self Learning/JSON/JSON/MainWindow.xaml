<Window x:Class="JSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFAFCCD2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="411*"/>
            <ColumnDefinition Width="389*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstshows" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,102,0,0" Background="#FFD5E1E3" FontFamily="Book Antiqua" Grid.ColumnSpan="2"/>
        <Label x:Name="lblshows" Content="TV Shows" HorizontalAlignment="Left" Margin="354,42,0,0" VerticalAlignment="Top" Width="116" Background="#FFB8E7F1" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" FontFamily="Book Antiqua" FontSize="18"/>

    </Grid>
</Window>
