<Window x:Class="JSON_RickAndMorty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_RickAndMorty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cbocharacters" HorizontalAlignment="Left" Margin="84,89,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbocharacters_SelectionChanged"/>
        <Label Content="Select a character" HorizontalAlignment="Left" Margin="84,63,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Button x:Name="btngetinfo" Content="Get Info" HorizontalAlignment="Left" Margin="84,137,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="btngetinfo_Click"/>
        <Image x:Name="imgcharacter" HorizontalAlignment="Left" Height="176" Margin="340,31,0,0" VerticalAlignment="Top" Width="209"/>
        <Label x:Name="lblname" Content="Name:" HorizontalAlignment="Left" Margin="340,230,0,0" VerticalAlignment="Top" Width="45"/>
        <TextBox x:Name="txtname" HorizontalAlignment="Left" Margin="390,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="31" IsEnabled="False"/>

    </Grid>
</Window>
